name='hooks'
pkgdesc='utility hooks for pacman and other stuff'

source ../common.sh

# this one is a special one, cause it sets up the hook for other packages,
# so need to write down things manually!

package() {
    mkdir -p "${pkgdir}/etc/pacman.d/"
    cp -a "${rootdir}"/hooks "${pkgdir}/etc/pacman.d/"
    cp -a "${rootdir}"/hooks.bin "${pkgdir}/etc/pacman.d/"
  return 0
}
